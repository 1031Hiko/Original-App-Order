<!DOCTYPE html>
<html>
<head>
  <title>Order</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <% if brand_signed_in?%>
    <div class="user_nav grid-6">
          <%= link_to "sign out", destroy_brand_session_path, method: :delete %>
          <%= render partial: 'common/header' %>
    </div>
  <% elsif retailer_signed_in? %>
    <div class="user_nav grid-6">
      <%= link_to "sign out", destroy_retailer_session_path, method: :delete %>
      <%= render partial: 'common/header' %>
    </div>
  <% else %>
    <div class="grid-6">
      <%= link_to "Brand", brand_session_path, class: 'post' %>
      <%= link_to "Retailer", retailer_session_path, class: 'post' %>
      <%= link_to "Brand Register", new_brand_registration_path, class: 'post' %>
      <%= link_to "Retailer Register", new_retailer_registration_path, class: 'post' %>
    </div>
  <% end %>
</header>

<%= yield %>

<footer class='row text-center'>
        <p>(C) Order 2015</p>
</footer>

</body>

</html>
