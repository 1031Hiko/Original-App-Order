<div class="container">
  <div class="row">
    <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
       <br>
    </div>
      <h2>product information</h2>
    <br>
      <%= form_for ( [@brand, @product ] ) do |f| %>
        <%= f.fields_for :posted_products do |posted_products_form| %>
          <%= posted_products_form.text_field :style_number, placeholder: "style number" %>
          <%= posted_products_form.text_field :price, placeholder: "price" %>
          <%= posted_products_form.collection_select(:size_id, @sizes, :id, :name, {include_hidden: false}, {multiple: true}) %>
          <%= posted_products_form.collection_select(:color_id, @colors, :id, :name, {include_hidden: false}, {multiple: true}) %>
          <%= posted_products_form.text_field :fabric, placeholder: "fabric" %>
          <%= posted_products_form.file_field :image %>
            <% if @brand.persisted? %>
              <%= posted_products_form.check_box :_destroy %>
              <%= posted_products_form.label :_destroy, "remove" %><br />
            <% end %>
        <% end %>
          <div>
            <%= f.fields_for :posted_products do |builder| %>
              <%= render partial: "posted_product_fields", locals: {f: builder} %>
            <% end %>
              <%= link_to_add_field "add product", f, :posted_products %>
          </div>
          <br>
        <%= f.submit "confirm", class: "btn btn-primary withripple" %>
      <% end %>
  </div>
</div>

