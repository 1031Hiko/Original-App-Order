<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_brand do |f| %>
      <h2>product information</h2>

      <%= f.text_field :style_number, placeholder: "style number" %>
      <%= f.text_field :price, placeholder: "price" %>
      <%= f.text_field :size, placeholder: "size" %>
      <%= f.text_field :color, placeholder: "color" %>
      <%= f.text_field :fabric, placeholder: "fabric" %>


        <%= f.submit "update", class: "btn btn-primary withripple" %>

     <% end %>
  </div>
</div>