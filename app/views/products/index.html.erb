<div class="row form">
  <div class="col-lg-12"> 
    <h2>Product information</h2>
   
      <% @brand.products.posted_products.each_with_index do |posted_product, index| %>
        <div class="row form">
           <div class="col-lg-12"> 
            <%= index + 1 %>
            <%= image_tag posted_product.image %>
            <%= posted_product.style_number %>
            <%= posted_product.price %>
            <%= posted_product.fabric %>
            <%= posted_product.color_id.name %>
            <%= posted_product.size_id.name %>
          </div>
        </div>
      <% end %>
    <% if brand_signed_in?%>
       <%= link_to 'edit', edit_brand_product_path(current_brand, product), {class: 'btn btn-primary withripple' }%>
    <% else %>
       <%= link_to 'order', new_brand_contract_path(product.brand_id), {class: 'btn btn-primary withripple' }%>
   <% end %>
  </div>
</div>
