<div class="row form">
  <div class="col-lg-12">
   <% @products.each do |product| %>
     <h2>Product information</h2>
      <%= image_tag product.image %>
      <div class="form-group">
       <div class="col-lg-6">
         <%= product.style_number %>
      </div>
     </div>
     <div class="form-group">
          <%= product.price %>
     </div>
     <div class="form-group">
          <%= product.size %>
     </div>
     <div class="form-group">
          <%= product.color %>
     </div>
     <div class="form-group">
          <%= product.fabric %>
     </div>
     <div class="profile_edit">
        <%= link_to 'edit', edit_brand_product_path(current_brand, product), {class: 'btn btn-primary withripple' }%>
      </div>

    <% end %>
  </div>
</div>
