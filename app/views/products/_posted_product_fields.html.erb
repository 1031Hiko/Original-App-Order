<fieldset>

  <%= f.text_field :style_number, placeholder: "style number" %>
  <%= f.text_field :price, placeholder: "price" %>
  <%= f.collection_select(:size_id, @sizes, :id, :name, {include_hidden: false}, {multiple: true}) %>
  <%= f.collection_select(:color_id, @colors, :id, :name, {include_hidden: false}, {multiple: true}) %>
  <%= f.text_field :fabric, placeholder: "fabric" %>
  <%= f.file_field :image %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", '#', class: "remove_fields" %>

</fieldset>